<Window x:Class="Japanese.MatchGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Japanese"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0" Width="200" HorizontalAlignment="Left">
            <Button Content="ねこ" Click="JapaneseWordButton_Click" Tag="Cat"/>
            <Button Content="いぬ" Click="JapaneseWordButton_Click" Tag="Dog"/>
            <Button Content="さくら" Click="JapaneseWordButton_Click" Tag="Cherry Blossom"/>
            <Button Content="やま" Click="JapaneseWordButton_Click" Tag="Mountain"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" Grid.ColumnSpan="2" Margin="0,0,10,0">
            <Button Content="Собака" Click="TranslationButton_Click" Tag="Dog"/>
            <Button Content="Гора" Click="TranslationButton_Click" Tag="Mountain"/>
            <Button Content="Сакура" Click="TranslationButton_Click" Tag="Cherry Blossom"/>
            <Button Content="Кішка" Click="TranslationButton_Click" Tag="Cat"/>
        </StackPanel>
        <Button VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="20" Margin="10, 10, 0, 0" Content="Back" Click="Button_Click"/>
    </Grid>
</Window>
